<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="80dp">
        <TextView
            android:onClick="oneOnClick"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="C"
            android:background="@drawable/selector_white_bg"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_width="0dp"
            android:background="@drawable/shap_rectangle"
            android:layout_weight="1"
            android:text="+/-"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="*"
            android:background="@drawable/shap_rectangle"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="/"
            android:textSize="20sp"
            android:gravity="center"
            android:background="@drawable/shape_retangle_oriange"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="80dp">
        <TextView
            android:layout_width="0dp"
            android:background="@drawable/shap_rectangle"
            android:layout_weight="1"
            android:text="1"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shap_rectangle"
            android:gravity="center"
            android:text="2"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="3"
            android:textSize="20sp"
            android:background="@drawable/shap_rectangle"
            android:gravity="center"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_retangle_oriange"
            android:gravity="center"
            android:text="X"
            android:textSize="20sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="80dp">
        <TextView
            android:layout_width="0dp"
            android:background="@drawable/shap_rectangle"
            android:layout_weight="1"
            android:text="4"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_width="0dp"
            android:background="@drawable/shap_rectangle"
            android:layout_weight="1"
            android:text="5"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_height="match_parent"/>
        <TextView
            android:background="@drawable/shap_rectangle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="6"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="--"
            android:background="@drawable/shape_retangle_oriange"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="80dp">
        <TextView
            android:layout_width="0dp"
            android:background="@drawable/shap_rectangle"
            android:layout_weight="1"
            android:text="7"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/shap_rectangle"
            android:text="8"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="9"
            android:background="@drawable/shap_rectangle"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_retangle_oriange"
            android:gravity="center"
            android:text="+"
            android:textSize="20sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <TextView
            android:layout_width="0dp"
            android:background="@drawable/shap_rectangle"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:text="0"
            android:paddingLeft="40dp"
            android:textSize="20sp"
            android:layout_height="80dp"/>
        <TextView
            android:background="@drawable/shap_rectangle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="1"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_height="80dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="="
            android:background="@drawable/shape_retangle_oriange"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_height="80dp"/>

    </LinearLayout>
</LinearLayout>
